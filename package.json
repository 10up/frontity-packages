{
  "name": "frontity-packages",
  "version": "1.0.0",
  "private": true,
  "description": "10up's collection of frontity packages",
  "engines": {
    "node": "12.x",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "dev:inspect": "node --inspect -r ts-node/register/transpile-only ./node_modules/.bin/frontity dev",
    "dev": "frontity dev",
    "build": "frontity build",
    "serve": "frontity serve",
    "lint": "eslint . --ext '.js,.tsx,.ts'",
    "format": "eslint . --fix --ext '.js,.tsx,.ts'",
    "postinstall": "(cd packages/elasticpress && npm install)"
  },
  "devDependencies": {
    "@10up/eslint-config": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsdoc": "^31.0.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-tsdoc": "^0.2.10",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@10up/frontity-elasticpress": "./packages/elasticpress",
    "@10up/twentypress": "./packages/twentypress",
    "@10up/frontity-offline-support": "./packages/offline-support",
    "@frontity/core": "^1.9.1",
    "@frontity/html2react": "^1.5.0",
    "@frontity/mars-theme": "^1.4.4",
    "@frontity/tiny-router": "^1.2.4",
    "@frontity/twentytwenty-theme": "^1.2.1",
    "@frontity/wp-source": "^1.10.0",
    "frontity": "^1.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|tsx|ts)": [
      "eslint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/10up/frontity-packages.git"
  },
  "keywords": [
    "frontity",
    "wordpress",
    "10up"
  ],
  "author": "NÃ­cholas Andre <nicholas.andre@10up.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/10up/frontity-packages/issues"
  },
  "homepage": "https://github.com/10up/frontity-packages#readme"
}
